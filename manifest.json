{
    "name": "Zammad",
    "id": "zammad",
    "packaging_format": 1,
    "description": {
        "en": "Web based open source helpdesk/customer support system",
        "fr": "Web based open source helpdesk/customer support system"
    },
    "version": "5.0.3~ynh1",
    "url": "https://zammad.org/",
    "upstream": {
        "license": "AGPL-3.0-only",
        "website": "https://zammad.org/",
        "demo": "https://zammad.com/en/getting-started",
        "admindoc": "https://docs.zammad.org/en/latest/",
        "userdoc": "https://user-docs.zammad.org/en/latest/",
        "code": "https://github.com/zammad/zammad/"
    },
    "license": "free",
    "maintainer": {
        "name": "Hamlet",
        "email": "h@mlet.me"
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/zammad",
                "default": "/zammad"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "en"
            },
            {
                "name": "password",
                "type": "password",
                "help": {
                    "en": "Use the help field to add an information for the admin about this question.",
                    "fr": "Utilisez le champ aide pour ajouter une information à l'intention de l'administrateur à propos de cette question."
                }
            }
        ]
    }
}
